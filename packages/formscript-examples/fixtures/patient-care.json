{
  "title": "Patient Care",
  "widgets": [
    {
      "type": "header",
      "attributes": {
        "heading": "Patient Report",
        "desc": "This is an early-access version of a form to collect 'Patient Report' data. Please note both form content and this app may change considerably ahead of a wider roll-out.",
        "backgroundImage": "wmfs/casualty-care-background.jpg",
        "backgroundImageAltText": "Photograph of activity at a Road Traffic Collision"
      }
    },
    {
      "id": "incidentSection",
      "type": "set",
      "attributes": {
        "heading": "Incident details",
        "desc": "Please provide details of the incident at which casualty care was administered (we'll be automatically linking to real-time incident data soon).",
        "showInTOC": true
      }
    },
    {
      "id": "incidentNum",
      "type": "number",
      "attributes": {
        "heading": "Incident Number",
        "mandatory": true
      }
    },
    {
      "id": "station",
      "type": "select",
      "attributes": {
        "heading": "Station",
        "mandatory": true,
        "numericValue": false,
        "titleMap": [
          {"value": "ALDRIDGE", "title": "Aldridge"},
          {"value": "ASTON", "title": "Aston"},
          {"value": "BICKENHILL", "title": "Bickenhill"},
          {"value": "BILLESLEY", "title": "Billesley"},
          {"value": "BILSTON", "title": "Bilston"},
          {"value": "BINLEY", "title": "Binley"},
          {"value": "BLOXWICH", "title": "Bloxwich"},
          {"value": "BOURNBROOK", "title": "Bournbrook"},
          {"value": "BRIERLEY_HILL", "title": "Brierley Hill"},
          {"value": "CANLEY", "title": "Canley"},
          {"value": "COVENTRY", "title": "Coventry"},
          {"value": "DUDLEY", "title": "Dudley"},
          {"value": "ERDINGTON", "title": "Erdington"},
          {"value": "FALLINGS_PARK", "title": "Fallings Park"},
          {"value": "FOLESHILL", "title": "Foleshill"},
          {"value": "HADEN_CROSS", "title": "Haden Cross"},
          {"value": "HANDSWORTH", "title": "Handsworth"},
          {"value": "HAY_MILLS", "title": "Hay Mills"},
          {"value": "HIGHGATE", "title": "Highgate"},
          {"value": "KINGS_NORTON", "title": "Kings Norton"},
          {"value": "LADYWOOD", "title": "Ladywood"},
          {"value": "NORTHFIELD", "title": "Northfield"},
          {"value": "OLDBURY", "title": "Oldbury"},
          {"value": "PERRY_BARR", "title": "Perry Barr"},
          {"value": "SHELDON", "title": "Sheldon"},
          {"value": "SMETHWICK", "title": "Smethwick"},
          {"value": "SOLIHULL", "title": "Solihull"},
          {"value": "STOURBRIDGE", "title": "Stourbridge"},
          {"value": "SUTTON_COLDFIELD", "title": "Sutton Coldfield"},
          {"value": "TETTENHALL", "title": "Tettenhall"},
          {"value": "TIPTON", "title": "Tipton"},
          {"value": "WALSALL", "title": "Walsall"},
          {"value": "WARD_END", "title": "Ward End"},
          {"value": "WEDNESBURY", "title": "Wednesbury"},
          {"value": "WEST_BROMWICH", "title": "West Bromwich"},
          {"value": "WILLENHALL", "title": "Willenhall"},
          {"value": "WOLVERHAMPTON", "title": "Wolverhampton"},
          {"value": "WOODGATE_VALLEY", "title": "Woodgate Valley}"}
        ]
      }
    },
    {
      "id": "watch",
      "type": "select",
      "attributes": {
        "heading": "Watch",
        "mandatory": true,
        "numericValue": false,
        "titleMap": [
          {"value": "RED", "title": "Red"},
          {"value": "BLUE", "title": "Blue"},
          {"value": "WHITE", "title": "White"},
          {"value": "GREEN", "title": "Green"},
          {"value": "ORANGE", "title": "Orange"},
          {"value": "PURPLE", "title": "Purple"}
        ]
      }
    },
    {
      "id": "rollNum",
      "type": "number",
      "attributes": {
        "heading": "Roll number of patient carer",
        "mandatory": true
      }
    },
    {
      "type": "endSet"
    },
    {
      "id": "patientSection",
      "type": "set",
      "attributes": {
        "heading": "Patient details",
        "desc": "The questions in this section relate to the patient which received care.",
        "showInTOC": true
      }
    },
    {
      "id": "patientName",
      "type": "text",
      "attributes": {
        "heading": "Patient name",
        "mandatory": false
      }
    },
    {
      "id": "patientGender",
      "type": "radio",
      "attributes": {
        "heading": "Patient gender",
        "mandatory": true,
        "titleMap": [
          {"value": "MALE", "title": "Male"},
          {"value": "FEMALE", "title": "Female"},
          {"value": "UNKNOWN", "title": "Unknown"}
        ]
      }
    },
    {
      "id": "patientAge",
      "type": "number",
      "attributes": {
        "heading": "Age of patient",
        "mandatory": false
      }
    },
    {
      "id": "patientAddress",
      "type": "address",
      "attributes": {
        "heading": "Patient's address",
        "mandatory": false
      }
    },
    {
      "id": "collapse",
      "type": "radio",
      "attributes": {
        "heading": "Did the patient collapse?",
        "mandatory": true,
        "default": "NO",
        "titleMap": [
          {"value": "NO", "title": "No"},
          {"value": "NOT_WITNESSED", "title": "Yes (but not witnessed by the carer)"},
          {"value": "WITNESSED", "title": "Yes (as witnessed by the carer)"}
        ]
      }
    },
    {
      "id": "signsOfLife",
      "type": "radio",
      "attributes": {
        "heading": "Did the patient show any signs of life on arrival?",
        "mandatory": true,
        "default": "YES",
        "titleMap": [
          {"value": "YES", "title": "Yes"},
          {"value": "NO", "title": "No"}
        ]
      }
    },
    {
      "type": "endSet"
    },
    {
      "id": "airwaySection",
      "type": "set",
      "attributes": {
        "heading": "Any airway treatments?",
        "showInTOC": true
      }
    },
    {
      "id": "gurgling",
      "type": "select",
      "attributes": {
        "heading": "Gurgling noise from airway?",
        "mandatory": true,
        "default": "NOT_APPLICABLE",
        "titleMap": [
          {"value": "NOT_APPLICABLE", "title": "No gurgling noise - not applicable"},
          {"value": "TURNED_ON_SIDE", "title": "Patient turned on their side"},
          {"value": "SUCTION", "title": "Suction"},
          {"value": "OTHER", "title": "Other"},
          {"value": "NO_TREATMENT", "title": "No treatment"}
        ]
      }
    },
    {
      "id": "snoring",
      "type": "select",
      "attributes": {
        "heading": "Snoring noises from airway?",
        "mandatory": true,
        "default": "NOT_APPLICABLE",
        "titleMap": [
          {"value": "NOT_APPLICABLE", "title": "No snoring noise - not applicable"},
          {"value": "RECOVERY_POSITION", "title": "Recovery Position"},
          {"value": "CHIN_LIFT", "title": "Chin Lift"},
          {"value": "JAW_THRUST", "title": "Jaw Thrust"},
          {"value": "NP_TUBE_7", "title": "NP Tube (size 7)"},
          {"value": "NP_TUBE_6", "title": "NP Tube (size 6)"},
          {"value": "NP_TUBE_5", "title": "NP Tube (size 5)"},
          {"value": "NP_TUBE_4", "title": "NP Tube (size 4)"},
          {"value": "NP_TUBE_3", "title": "NP Tube (size 3)"},
          {"value": "OTHER", "title": "Other"},
          {"value": "NONE", "title": "None"}
        ]
      }
    },
    {
      "id": "cspine",
      "type": "radio",
      "attributes": {
        "heading": "C-Spine treatment?",
        "mandatory": true,
        "default": "CLEAR",
        "titleMap": [
          {"value": "CLEAR", "title": "Clear"},
          {"value": "MILS", "title": "MILS"}
        ]
      }
    },
    {
      "id": "choking",
      "type": "select",
      "attributes": {
        "heading": "Choking?",
        "mandatory": true,
        "default": "NOT_APPLICABLE",
        "titleMap": [
          {"value": "NOT_APPLICABLE", "title": "No choking - not applicable"},
          {"value": "COUGH", "title": "Encourage cough"},
          {"value": "BACK_SLAPS", "title": "Back slaps"},
          {"value": "ABDOMINAL_THRUSTS", "title": "Adbominal/Chest thrusts"},
          {"value": "COMPRESSIONS", "title": "Chest compressions (CPR)"},
          {"value": "OTHER", "title": "Other"}
        ]
      }
    },
    {
      "id": "airwayStatus",
      "type": "select",
      "attributes": {
        "heading": "Airway status",
        "mandatory": true,
        "default": "TALKING",
        "titleMap": [
          {"value": "TALKING", "title": "Talking"},
          {"value": "CLEAR", "title": "Clear"},
          {"value": "BACK_SLAPS", "title": "Back slaps"},
          {"value": "PARTIALLY_OBSTRUCTED", "title": "Partially obstructed"},
          {"value": "COMPLETELY_OBSTRUCTED", "title": "Completely obstructed"}
        ]
      }
    },
    {
      "type": "endSet"
    },
    {
      "id": "breathingSection",
      "type": "set",
      "attributes": {
        "heading": "Any breathing treatments?",
        "showInTOC": true
      }
    },
    {
      "id": "alwaysBreathing",
      "type": "select",
      "attributes": {
        "heading": "Was the patient breathing at all times?",
        "mandatory": true,
        "default": "YES",
        "titleMap": [
          {"value": "YES", "title": "Yes"},
          {"value": "POCKET_MASK", "title": "No - Pocket Mask"},
          {"value": "MOUTH_TO_MOUTH", "title": "No - Mouth to mouth"},
          {"value": "BAG_VALVE_MASK", "title": "No - Bag-valve-mask (two operator BVM)"},
          {"value": "OTHER", "title": "No - Other"}
        ]
      }
    },
    {
      "id": "chestInjury",
      "type": "select",
      "attributes": {
        "heading": "Any chest injury found?",
        "mandatory": true,
        "default": "NO",
        "titleMap": [
          {"value": "NO", "title": "No"},
          {"value": "FLAIL_CHEST", "title": "Yes - flail chest"},
          {"value": "OPEN_SUCKING", "title": "Yes - open sucking chest wound"},
          {"value": "CHEST_WALL_BRUISING", "title": "Yes - chest wall bruising"},
          {"value": "OTHER", "title": "Yes - other"}
        ]
      }
    },
    {
      "id": "chestInjuryTreatment",
      "type": "select",
      "showWhen": "data.chestInjury !== 'NO'",
      "attributes": {
        "heading": "What treatment was provided for the chest injury?",
        "mandatory": true,
        "titleMap": [
          {"value": "CHEST_SEAL", "title": "Chest seal"},
          {"value": "PATIENT_POSITIONING", "title": "Patient positioning"},
          {"value": "OXYGEN", "title": "Oxygen"},
          {"value": "OTHER", "title": "Other"},
          {"value": "NONE", "title": "None"}
        ]
      }
    },
    {
      "id": "normalBreathing",
      "type": "radio",
      "attributes": {
        "heading": "Any treatment when breathing normally?",
        "mandatory": true,
        "titleMap": [
          {"value": "NO", "title": "No"},
          {"value": "15_MIN_REBREATHER_MASK", "title": "Yes - oxygen @ 15 l/min via non-rebreather mask"},
          {"value": "OTHER", "title": "Yes - other"}
        ]
      }
    },
    {
      "id": "respiratoryArrival",
      "type": "text",
      "attributes": {
        "heading": "Initial respiratory rate on arrival",
        "mandatory": false
      }
    },
    {
      "id": "respiratoryHandover",
      "type": "text",
      "attributes": {
        "heading": "Initial respiratory rate on handover",
        "mandatory": false
      }
    },
    {
      "type": "endSet"
    },
    {
      "id": "circulationSection",
      "type": "set",
      "attributes": {
        "heading": "Circulation",
        "showInTOC": true
      }
    },
    {
      "id": "bleeding",
      "type": "select",
      "attributes": {
        "heading": "Any external compressible bleeding?",
        "mandatory": true,
        "default": "NO",
        "titleMap": [
          {"value": "NO", "title": "No"},
          {"value": "DIRECT_PRESSURE", "title": "Yes - direct pressure applied"},
          {"value": "ELEVATION", "title": "Yes - elevation"},
          {"value": "PRESSURE_DRESSING", "title": "Yes - pressure dressing applied"},
          {"value": "INDIRECT_PRESSURE", "title": "Yes - indirect pressure applied"},
          {"value": "TOURNIQUET", "title": "Yes - tourniquet applied"},
          {"value": "CELOX", "title": "Yes - haemostatic agent (Celox)"},
          {"value": "OTHER", "title": "Yes - other treatment provided"},
          {"value": "NONE", "title": "Yes - but no treatment provided"}
        ]
      }
    },
    {
      "id": "shock",
      "type": "select",
      "attributes": {
        "heading": "Was the patient in shock?",
        "mandatory": true,
        "default": "NO",
        "titleMap": [
          {"value": "NO", "title": "No"},
          {"value": "LEG_ELEVATION", "title": "Elevation of legs (pelvic injury not suspected"},
          {"value": "TOPS", "title": "Pelvic binder (TOPS)"},
          {"value": "SPLINTED", "title": "Fractures splinted"},
          {"value": "OTHER", "title": "Other"}
        ]
      }
    },
    {
      "id": "radialPulse",
      "type": "radio",
      "attributes": {
        "heading": "Radial Pulse",
        "mandatory": true,
        "default": "NOT_ASSESSED",
        "titleMap": [
          {"value": "NOT_ASSESSED", "title": "Not assessed"},
          {"value": "PRESENT", "title": "Present"},
          {"value": "NOT_PRESENT", "title": "Not present"}
        ]
      }
    },
    {
      "id": "pulseArrival",
      "type": "number",
      "attributes": {
        "heading": "Pulse rate on arrival (BPM)",
        "mandatory": false
      }
    },
    {
      "id": "pulseHandover",
      "type": "number",
      "attributes": {
        "heading": "Pulse rate on handover (BPM)",
        "mandatory": false
      }
    },
    {
      "id": "bloodPressure",
      "type": "text",
      "attributes": {
        "heading": "Blood pressure (if recorded)",
        "mandatory": false
      }
    },
    {
      "id": "temperature",
      "type": "text",
      "attributes": {
        "heading": "Temperature (if recorded)",
        "mandatory": false
      }
    },
    {
      "id": "capillaryRefill",
      "type": "number",
      "attributes": {
        "heading": "Capillary refill time (seconds)",
        "mandatory": false
      }
    },
    {
      "type": "endSet"
    },
    {
      "id": "disabilitySection",
      "type": "set",
      "attributes": {
        "heading": "Disability",
        "showInTOC": true
      }
    },
    {
      "id": "limbMovement",
      "type": "checkboxList",
      "attributes": {
        "heading": "Which limbs were seen to move?",
        "default": ["LEFT_ARM", "RIGHT_ARM", "LEFT_LEG", "RIGHT_LEG"],
        "minLimit": 0,
        "maxLimit": 4,
        "titleMap": [
          {"value": "LEFT_ARM", "title": "Left arm"},
          {"value": "RIGHT_ARM", "title": "Right arm"},
          {"value": "LEFT_LEG", "title": "Left leg"},
          {"value": "RIGHT_LEG", "title": "Right leg"}
        ]
      }
    },
    {
      "id": "avpuArrival",
      "type": "radio",
      "attributes": {
        "heading": "AVPU score on arrival",
        "default": "ALERT",
        "titleMap": [
          {"value": "ALERT", "title": "Alert"},
          {"value": "VERBAL", "title": "Verbal"},
          {"value": "PAIN", "title": "Pain"},
          {"value": "UNRESPONSIVE", "title": "Unresponsive to pain"}
        ]
      }
    },
    {
      "id": "avpuHandover",
      "type": "radio",
      "attributes": {
        "heading": "AVPU score on handover",
        "default": "ALERT",
        "titleMap": [
          {"value": "ALERT", "title": "Alert"},
          {"value": "VERBAL", "title": "Verbal"},
          {"value": "PAIN", "title": "Pain"},
          {"value": "UNRESPONSIVE", "title": "Unresponsive to pain"}
        ]
      }
    },
    {
      "id": "painArrival",
      "type": "questionnaire",
      "attributes": {
        "heading": "Pain-score on arrival",
        "desc": "How did the carer assess the patient's pain when they first met?",
        "default": 1,
        "numericValue": true,
        "titleMap": [
          {"value": 0, "title": "0", "desc": "No pain"},
          {"value": 1, "title": "1", "desc": "Slight pain"},
          {"value": 2, "title": "2", "desc": "Moderate pain"},
          {"value": 3, "title": "3", "desc": "Severe pain"}
        ]
      }
    },
    {
      "id": "painHandover",
      "type": "questionnaire",
      "attributes": {
        "heading": "Pain-score at handover",
        "desc": "How did the carer assess the patient's pain at handover?",
        "default": 1,
        "numericValue": true,
        "titleMap": [
          {"value": 0, "title": "0", "desc": "No pain"},
          {"value": 1, "title": "1", "desc": "Slight pain"},
          {"value": 2, "title": "2", "desc": "Moderate pain"},
          {"value": 3, "title": "3", "desc": "Severe pain"}
        ]
      }
    },
    {
      "type": "endSet"
    },
    {
      "id": "exposureSection",
      "type": "set",
      "attributes": {
        "heading": "Exposure",
        "showInTOC": true
      }
    },
    {
      "id": "exposure",
      "type": "select",
      "attributes": {
        "heading": "Exposure",
        "desc": "Was the patient treated for exposure?",
        "default": "NOT_NECESSARY",
        "titleMap": [
          {"value": "NOT_NECESSARY", "title": "No treatment necessary"},
          {"value": "BACK_AND_SIDES", "title": "Yes - back and sides of casualty checked"},
          {"value": "BLANKET", "title": "Yes - blanket"},
          {"value": "PROTECTED", "title": "Yes - Protected from heat loss"},
          {"value": "FULLY_UNDRESSED", "title": "Yes - fully undressed"},
          {"value": "LOGROLLED", "title": "Yes - logrolled"},
          {"value": "C_COLLAR", "title": "Yes - C-collar applied for extrication"},
          {"value": "OTHER", "title": "Yes - other"},
          {"value": "NO", "title": "No"}
        ]
      }
    },
    {
      "type": "endSet"
    },
    {
      "id": "burnsSection",
      "type": "set",
      "attributes": {
        "heading": "Burns",
        "showInTOC": true
      }
    },
    {
      "id": "burns",
      "type": "switch",
      "attributes": {
        "heading": "Did the patient suffer burns?",
        "default": false
      }
    },
    {
      "id": "burnRelated",
      "type": "set",
      "showWhen": "data.burns"
    },
    {
      "id": "burnTime",
      "type": "text",
      "attributes": {
        "heading": "Approximate time the burn occurred"
      }
    },
    {
      "id": "burnCause",
      "type": "select",
      "attributes": {
        "heading": "Cause of burns",
        "titleMap": [
          {"value": "CHEMICAL", "title": "Chemical"},
          {"value": "FLAME", "title": "Flame"},
          {"value": "FRICTION", "title": "Friction"},
          {"value": "RADIATION", "title": "Radiation"},
          {"value": "COLD", "title": "Cold"},
          {"value": "ELECTRICAL", "title": "Electrical"},
          {"value": "SCALD", "title": "Scald (steam/boiling water)"},
          {"value": "OTHER", "title": "Other"}
        ]
      }
    },
    {
      "id": "burnDepth",
      "type": "radio",
      "attributes": {
        "heading": "Burn depth (estimate)",
        "titleMap": [
          {"value": "FULL", "title": "Full thickness"},
          {"value": "PARTIAL", "title": "Partial thickness"},
          {"value": "SUPERFICIAL", "title": "Superficial"},
          {"value": "OTHER", "title": "Other"}
        ]
      }
    },
    {
      "id": "burnArea",
      "type": "slider",
      "attributes": {
        "heading": "Estimated body surface area burnt (%)",
        "minimum": 0,
        "maximum": 100,
        "step": 5
      }
    },
    {
      "id": "burnTreatment",
      "type": "select",
      "attributes": {
        "heading": "Burn treatment?",
        "titleMap": [
          {"value": "COOLED", "title": "Cooled for at least 10 minutes"},
          {"value": "CLINGFILM", "title": "Clingfilm"},
          {"value": "FACE_GEL", "title": "Face gel dressing"},
          {"value": "NONE", "title": "No treatment applied"}
        ]
      }
    },
    {
      "id": "treatmentTime",
      "type": "text",
      "attributes": {
        "heading": "Approximate time the treatment was applied"
      }
    },
    {
      "type": "endSet"
    },
    {
      "type": "endSet"
    },
    {
      "id": "cprSection",
      "type": "set",
      "attributes": {
        "heading": "CPR",
        "showInTOC": true
      }
    },
    {
      "id": "cprGiven",
      "type": "switch",
      "attributes": {
        "heading": "CPR given?",
        "default": false
      }
    },
    {
      "id": "cprRelated",
      "type": "set",
      "showWhen": "data.cprGiven"
    },
    {
      "id": "cprTime",
      "type": "text",
      "attributes": {
        "heading": "CPR given at what time"
      }
    },
    {
      "id": "aedTime",
      "type": "text",
      "attributes": {
        "heading": "AED given at what time"
      }
    },
    {
      "id": "numShocks",
      "type": "number",
      "attributes": {
        "default": 1,
        "heading": "How many shocks were delivered?"
      }
    },
    {
      "id": "signsReturn",
      "type": "text",
      "attributes": {
        "heading": "When did signs of life return?"
      }
    },
    {
      "type": "endSet"
    },
    {
      "type": "endSet"
    },
    {
      "id": "medicationSection",
      "type": "set",
      "attributes": {
        "heading": "Medication",
        "showInTOC": true
      }
    },
    {
      "id": "medicationGiven",
      "type": "radio",
      "attributes": {
        "heading": "Was medication given by the patient carer?",
        "titleMap": [
          {"value": "NO", "title": "No"},
          {"value": "OXYGEN", "title": "Oxygen"},
          {"value": "GLUCOSE", "title": "Glucose"},
          {"value": "GLUCAGON", "title": "Glucagon"},
          {"value": "OTHER", "title": "Other"}
        ]
      }
    },
    {
      "type": "endSet"
    },
    {
      "id": "summarySection",
      "type": "set",
      "attributes": {
        "heading": "Summary",
        "showInTOC": true
      }
    },
    {
      "id": "clinicalNotes",
      "type": "richtext",
      "attributes": {
        "heading": "Clinical Notes"
      }
    },
    {
      "id": "handover",
      "type": "text",
      "attributes": {
        "heading": "Who was the patient handed over to? (Emergency service and name of person)"
      }
    },
    {
      "type": "endSet"
    }
  ]
}